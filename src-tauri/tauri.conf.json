{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pomodoro-timer-app",
  "version": "0.1.0",
  "identifier": "com.pomodoro-timer-app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pomodoro-timer-app",
        "width": 600,
        "height": 300,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "shadow": false,
        "decorations": true,
        "center": true,
        "windowEffects": {
          "effects": [
            "blur"
          ]
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/16x16.png",
      "icons/24x24.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}